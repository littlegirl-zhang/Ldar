<?xml version="1.0" encoding="utf-8"?>
<com.sinopec.ldar.ui.view.RecyclerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_left"
            android:layout_alignBottom="@+id/layout_left"
            android:layout_alignTop="@+id/layout_left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_red"
                android:gravity="center"
                android:text="删 除"
                android:textColor="@color/white" />

        </LinearLayout>

        <include layout="@layout/layout_task_info"
            android:id="@+id/layout_left"/>

    </RelativeLayout>

</com.sinopec.ldar.ui.view.RecyclerItemView>