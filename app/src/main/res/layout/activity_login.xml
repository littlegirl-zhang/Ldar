<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sinopec.ldar.ui.activity.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/dp_10"
            android:text="@string/login_operator"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_base_title"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/login_sp_user"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/selector_btn_base"
        android:text="@string/login_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />


</LinearLayout>
