<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_content_white"
    android:padding="@dimen/dp_10">

    <TextView
        android:layout_weight="1"
        android:id="@+id/item_bg_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-08-19" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/item_bg_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常压装置" />
    <EditText
        android:id="@+id/item_bg_ed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@drawable/selector_ed"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/check_color_input_black" />
    <RadioButton
        android:id="@+id/item_bg_rb_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_input"
        android:textColor="@color/check_color_input"
        android:textSize="@dimen/sp_18" />
</LinearLayout>